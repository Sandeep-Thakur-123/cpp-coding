#include<iostream>
using namespace std;

void selectionsort(int arr[], int&n){
    
    for(int i = 0; i < n; i++){
        int minindex = i;
        
        for(int j = i + 1; j < n; j++){
            if(arr[j] < arr[minindex]){
                minindex = j;
            }
        }
        
        int temp = arr[i];
        arr[i] = arr[minindex];
        arr[minindex] = temp;
    }
}

int main(){
    
    int arr[] = {6, 4, 0, 7, 2};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    selectionsort(arr,n);
    
    for(int i = 0; i < n; i++){
        cout << arr[i];
    }
}
