#include<iostream>
using namespace std;

int increasingsubarray(int arr[], int n){
    
    int count = 0;
    int currentlength = 1;
    
    for(int i = 1; i < n; i++){
        
        if(arr[i] > arr[i-1]){
            currentlength++;
            count = count + (currentlength-1);
        }
        
        else{
            
            currentlength = 1;
        }
        
        
    }
    
    return count;
    
}

int main(){
    int arr[100];
    int n;
    cin >> n;
    
    for(int i = 0; i < n; i++){
        cin >> arr[i];
    }
    
    cout << increasingsubarray(arr,n);
    
    
}


//input = { 1 3 3 2 3 5}
//output = 4
//input = {1, 5}
//output = 1
